<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    tools:context="com.offlinecache.MainActivity">

    <RadioGroup
        android:id="@+id/rg_main_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <RadioButton
            android:id="@+id/rb_save"
            style="@style/rbt_bottom"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:checked="true"
            android:drawableTop="@drawable/selector_save"
            android:gravity="center"
            android:text="保存"
            android:textColor="@drawable/radiobutton_main_tab_text_color" />

        <RadioButton
            android:id="@+id/rb_locality"
            style="@style/rbt_bottom"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:drawableTop="@drawable/selector_locality"
            android:text="本地"
            android:textColor="@drawable/radiobutton_main_tab_text_color" />

        <RadioButton
            android:id="@+id/rb_me"
            style="@style/rbt_bottom"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:drawableTop="@drawable/selector_me"
            android:text="我的"
            android:textColor="@drawable/radiobutton_main_tab_text_color" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_tab"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/rg_main_menu" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/anim"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000" >
    </RelativeLayout>

</RelativeLayout>
